<div class="auth-wrapper">
  <div class="auth-card">
    <h2 class="text-center">Welcome Back!</h2>
    <div class="mb-4 text-center text-muted h4">Login</div>
    <%-include("../partials/flash_alerts")%>

    <form action="/auth/login" method="POST" novalidate>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
        <label for="email">Email</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        <label for="password">Password</label>
      </div>
      <button class="btn btn-primary w-100">Login</button>
      <div class="text-center mt-2 d-none">
        <a href="/google" class="btn btn-outline-dark w-100">Login with Google</a>
      </div>
      <div class="text-start mt-2">
        <a class="text-decoration-none text-muted" href="/auth/reset-password">Forgot password?</a>
      </div>
    </form>
    <div class="text-center mt-3">
      <a href="/auth/register" class="text-decoration-none">Don't have an account? Register here.</a>
    </div>
  </div>
</div>