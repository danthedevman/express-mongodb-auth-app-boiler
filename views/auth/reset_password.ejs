<div class="auth-wrapper">
  <div class="auth-card">
    <h2 class="mb-4">Reset Password</h2>
    <%-include("../partials/flash_alerts")%>
    <form action="/auth/send-reset-link" method="POST" novalidate>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="resetEmail" name="email" placeholder="Email" required>
        <label for="resetEmail">Email</label>
      </div>
      <button class="btn btn-warning w-100">Send Reset Link</button>
    </form>
    <div class="text-center mt-3">
      <a href="/auth/login" class="text-decoration-none">Back to login</a>
    </div>
  </div>
</div>